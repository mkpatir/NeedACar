<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallTextAppearance">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/general_text_color</item>
    </style>

    <style name="MediumTextAppearance">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/general_text_color</item>
    </style>

    <style name="MediumTextAppearance.Bold">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/general_text_color</item>
    </style>

    <style name="BigTextAppearance">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/general_text_color</item>
    </style>

</resources>